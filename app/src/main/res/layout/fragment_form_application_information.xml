<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Applicant Information :"
                android:textColor="@color/text_head_color"
                android:textSize="@dimen/bold_text_size">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|right"
                android:text="Step 1-4"
                android:textSize="@dimen/normal_text_size">

            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Applicant’s First Name"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:id="@+id/edt_app_firstname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:textSize="@dimen/normal_text_size">


        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:text="Applicant’s Last Name"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_app_lastname"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Co-Applicant First Name"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_coapp_firstname"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Co-Applicant Last Name"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_coapp_lastname"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Date of birth"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_dob"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Mailing Address"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="100dp">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="City"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_city"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="State"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_state"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Zip Code"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_zip"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Email Address"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Applicant(s) occupation – state nature of business if self-employed or retired"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_app_occupation"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Applicant(s) employer Street address"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_employuer_street"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="City"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_employuer_city"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="State"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_employuer_state"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Zip Code"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_employuer_zip"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Years with current employer"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_years_with_current"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Years with prior employer"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_years_with_prior"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Marital status"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner_inputwhitet">



            <Spinner android:id="@+id/spinner_married"
                android:layout_width="match_parent"
                android:textSize="@dimen/normal_text_size"
                android:layout_height="@dimen/edittext_height">

            </Spinner>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Date of birth"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_dob_final"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:focusable="false"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
    </LinearLayout>
</ScrollView>