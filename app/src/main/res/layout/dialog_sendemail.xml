<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/dailog_loout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyaoutFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lineviewLyaout"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Send quote"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="First Name "
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/editFname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_inputwhitet"
                android:inputType="none"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Last Name"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/editLname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_inputwhitet"
                android:inputType="none"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="14sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Email Address"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/editemailaddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_inputwhitet"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:id="@+id/lineviewLyaout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/viewLyaout"
            android:background="@color/white"></View>

        <LinearLayout
            android:id="@+id/viewLyaout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/roundcorner_bottom">

            <TextView
                android:id="@+id/btn_Cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#aaaaaa"></View>

            <TextView
                android:id="@+id/btn_done"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ok"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>