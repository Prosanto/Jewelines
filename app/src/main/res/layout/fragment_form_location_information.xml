            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_phome_add"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="City"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_phome_city"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="State"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_phome_state"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:text="Zip Code"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        </TextView>
        <EditText android:id="@+id/edt_phome_zip"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_corner_inputwhitet"
            android:layout_height="@dimen/edittext_height">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
