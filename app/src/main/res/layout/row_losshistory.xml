<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/gray_xlight"
    >

    <LinearLayout
        android:id="@+id/row_linear"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView android:id="@+id/date_of_loss"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Date of loss"
            android:textSize="8sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/black"
            android:layout_height="fill_parent"></View>

        <TextView android:id="@+id/txt_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Type"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/black"
            android:layout_height="fill_parent"></View>

        <TextView android:id="@+id/txt_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Description"
            android:textSize="8sp" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/black"
            android:layout_height="fill_parent"></View>

        <TextView android:id="@+id/txt_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Amount"
            android:textSize="8sp" />


    </LinearLayout>



</LinearLayout>